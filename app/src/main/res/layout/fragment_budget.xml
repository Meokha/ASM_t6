<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BudgetFragment">

    <!-- Nút thêm ngân sách -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAddBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_input_add"
        app:backgroundTint="#D9EAFD"
        app:tint="#000000" />

    <!-- Danh sách ngân sách -->

    <!-- Danh sách expense gần đây -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBudget"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/btnAddBudget"
        android:layout_marginTop="-88dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_recent_expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rvBudget"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:nestedScrollingEnabled="false"
        tools:itemCount="3"
        tools:listitem="@layout/item_recent_expense" />

    <!-- Thông báo khi không có expense -->
    <TextView
        android:id="@+id/tv_empty_expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rvBudget"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="No expenses yet"
        android:textColor="#3D0301"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- Nút thêm expense -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_expense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:contentDescription="Add New Expense"
        android:src="@drawable/ic_add_circle"
        app:backgroundTint="#D9EAFD"
        app:tint="@android:color/black"
        app:elevation="6dp" />

</RelativeLayout>
